{
  "name": "the-kitchen-sink",
  "version": "0.0.1",
  "main": "slc run server/server.js",
  "scripts": {
    "jshint-client": "jshint ./client && echo 'JSHint (client) ok'",
    "jshint-server": "jshint ./server && echo 'JSHint (server) ok'",
    "jshint": "npm run jshint-client && npm run jshint-server && echo 'JSHint ok'",
    "test-client": "mocha ./client/tests/unit --recursive && mocha ./client/tests/e2e --recursive --timeout 4000 && npm run test-coverage-client && echo 'test-client ok'",
    "test-server": "mocha ./server/tests/unit --recursive && mocha ./server/tests/e2e --recursive && npm run test-coverage-server && echo 'test-server ok'",
    "test": "npm run test-client && npm run test-server",
    "test-coverage-client": "istanbul cover --dir ./client/tests/coverage -x \"**/client/js/lib/**\" node_modules/.bin/_mocha -- -u exports -R spec ./client/tests/unit/**/*.js",
    "test-coverage-server": "istanbul cover --dir ./server/tests/coverage -x \"**/server/logger/**\" -x \"**/server/server.js\" -x \"**/server/boot/**\" node_modules/.bin/_mocha -- -u exports -R spec ./server/tests/unit/**/*.js",
    "test-coverage": "npm run test-coverage-client && npm run test-coverage-server",
    "compile-index-html": "index-env -i client/index.ejs -c client -o client/index.html  && echo 'compile-index-html ok.'",
    "ng-html2js": "ng-html2js /static/html/ ./client/static/js/bundle.js -m app -b ./client -a && echo 'ng-html2js ok'",
    "ng-sdk": "lb-ng ./server/server.js ./client/static/js/lib/lb-services.js && echo 'ng-sdk ok'",
    "less": "lessc ./client/less/style.less > ./client/static/css/style.css -x && echo 'Less ok'",
    "browserify": "browserify ./client/static/js/app/app.js -o ./client/static/js/bundle.js && echo 'Browserify ok'",
    "uglify": "uglifyjs ./client/static/js/bundle.js -o ./client/static/js/bundle.js && echo 'Uglify ok'",
    "build-client": "npm run jshint-client && npm run test-client && npm run compile-index-html && npm run ng-sdk && npm run browserify && npm run ng-html2js && npm run uglify && npm run less  && echo 'build-client ok.'",
    "build-server": "npm run jshint-server && npm run test-server && npm run migrations-up &&  && echo 'build-server ok.'",
    "build": "npm run build-client && npm run build-server && echo",
    "discover-models": "loopback-discover-models --prompt && npm run ng-sdk",
    "migrations-create": "loopback-db-migrate create",
    "migrations-up": "loopback-db-migrate up && echo 'migrations-up ok.'",
    "migrations-down": "loopback-db-migrate down",
    "start": "slc run server/server.js"
  },
  "dependencies": {
    "angular": "^1.3.8",
    "angular-resource": "^1.3.8",
    "angular-route": "^1.3.8",
    "body-parser": "^1.10.0",
    "compression": "^1.0.3",
    "errorhandler": "^1.1.1",
    "loopback": "^2.5.0",
    "loopback-boot": "^2.2.0",
    "loopback-connector-mongodb": "^1.4.5",
    "loopback-connector-mysql": "^1.4.9",
    "loopback-connector-postgresql": "^1.2.1",
    "loopback-datasource-juggler": "^2.7.0",
    "serve-favicon": "^2.0.1",
    "strong-supervisor": "^1.3.0",
    "winston": "^0.8.3"
  },
  "optionalDependencies": {
    "loopback-explorer": "^1.1.0"
  },
  "devDependencies": {
    "browserify": "^8.0.3",
    "browserify-middleware": "^3.0.1",
    "chai": "*",
    "chai-webdriver": "^1.0.0",
    "index-env": "git://github.com/slively/index-env.git#master",
    "istanbul": "^0.3.5",
    "jshint": "*",
    "less": "^2.2.0",
    "less-middleware": "^1.0.4",
    "loopback-db-migrate": "git://github.com/slively/loopback-db-migrate.git#master",
    "loopback-discover-models": "git://github.com/slively/loopback-discover-models.git#master",
    "mocha": "*",
    "ng-html2js": "git://github.com/slively/ng-html2js.git#master",
    "phantomjs": "^1.9.13",
    "selenium-webdriver": "^2.44.0",
    "sinon": "*",
    "sinon-chai": "*",
    "supertest": "*",
    "uglify-js": "^2.4.16"
  }
}
